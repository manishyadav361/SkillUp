<%= turbo_frame_tag dom_id(comment) do %>
<% if comment.user  %>
<div class="mb-2">
    <div class="flex items-center mb-2">
        <section class="w-6 h-6 rounded-2xl bg-gray-800 mr-2 cursor-pointer"></section>
        <section>
        <p><%= comment.user.name %></p>
        </section>
    </div>
    <p><%= comment.description %></p>
</div>
<% end %>
<% end %>