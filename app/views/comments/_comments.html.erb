<div class="flex flex-col py-4 w-11/12 mx-auto">
<% comments.each do |c| %>
<% if c.user  %>
<div class="mb-2">
    <div class="flex items-center mb-2">
        <section class="w-6 h-6 rounded-2xl bg-gray-800 mr-2 cursor-pointer"></section>
        <section>
        <p><%= c.user.name %></p>
        </section>
    </div>
    <p><%= c.description %></p>
</div>
<% end %>
<% end %>
</div>