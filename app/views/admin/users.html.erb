<div class="mb-10">
<%= render "home/header" , user: @user %>
</div>
<div class="flex flex-col py-10 w-11/12 m-auto md:w-6/12">
<div class="mb-4 m-auto">
    <%= render "partials/search" , action: "/admin/users" %>
</div>
<% if @users.count == 0 then %>
<div class="w-100 m-auto h-24 flex items-center">
    <p class="text-gray-400 h-100 w-100 ">No user's found</p>
</div>
<% end %>
<% @users.each do |user| %>
<div class="p-3 flex items-center justify-between text-black/90 font-medium  bg-gradient-to-r from-teal-200 to-lime-200 mb-2 rounded-md shadow-lg  cursor-pointer duration-300 text-gray-50">
<section class="flex items-center">
    <img  class="w-8 h-8 rounded-full mr-4" src="<% if user.profileImage.persisted? %> <%= url_for(user.profileImage) %> <% end %>">
    <p class="text-md"><%= user.name.titleize %></p>
</section>
    <section  >
    <%= render "admin/user_action" , user: user %>
    </section>
</div>
<% end %>
</div>