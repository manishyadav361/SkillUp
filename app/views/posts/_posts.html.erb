<div class="mt-8 px-1 md:w-6/12 sticky-top-10">
    <div class="mb-4 flex items-center" >
    <h3 class="text-xl font-medium mr-4">Post's</h3>
        <%= link_to "create post" , new_post_path(@post) , class:"rounded-md shadow-md shadow-green-200 bg-green-200 px-2 py-1 "  %>
    </div>
    
    <div class=" py-2 flex flex-col ">
        <% posts.each do |post| %>
            <div class="flex flex-col mb-6 mt-6">
              
                <div class="flex items-center">
                <a href="/profile/<%= post.user.id %>">
                    <section style="background-image:url(<% if post.user.profileImage.persisted? %> <%= url_for(post.user.profileImage) %> <% end %>)" class="shadow-lg bg-gray-500 w-10 h-10 rounded-3xl mr-2 bg-no-repeat bg-cover bg-center"></section>
                </a>
                    <h3 class="font-medium text-lg"><%= post.user.name.titleize %></h3>
                    <div class="ml-auto">
                    <% if session[:user_id].to_i == post.user.id then %>
                        <%= link_to "update" , edit_post_path(post) , class:"text-pink-500" %>
                    <% end %>
                    </div>
                </div>

                <div class="my-4">
                    <%= post.description %></p>
                </div>

                <div>
                 <% if post.image.persisted? %>
                 <a href="<%= url_for(post.image) %>">
                    <%= image_tag(post.image) %>
                    </a>
                 <% end %> 

            <%= render "posts/like" , post: post  %>

            <div>
            </div>
    <% end %>
    </div>
</div>