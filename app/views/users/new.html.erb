

<div class="flex flex-col justify-center items-center h-screen ">
<h1 class="font-medium text-2xl mb-8 ">Sign Up</h1>
<div>
<%= form_for :login do |f| %>
 
  <div class="flex flex-col mb-4">
    <%= f.label :name , class:"mb-2" %>
    <%= f.text_field :name, autofocus: true , class:"rounded-lg" %>
  </div>

  <div class="flex flex-col mb-4">
    <%= f.label :email , class:"mb-2" %>
    <%= f.text_field :email, autofocus: true , class:"rounded-lg" %>
  </div>

  <div class="flex flex-col mb-4">
    <%= f.label :profileImage , class:"mb-2" %>
    <%= f.file_field :profileImage, autofocus: true , class:"border border-gray-500 p-2 rounded-lg" %>
  </div>

  <div class="flex flex-col mb-4" >
    <%= f.label :password  , class:"mb-2" %>
    <%= f.password_field :password , class:"rounded-lg" %>
  </div>

   <div class="flex flex-col mb-4" >
    <%= f.label :password_confirmation  , class:"mb-2" %>
    <%= f.password_field :password_confirmation , class:"rounded-lg" %>
  </div>

  <div class="flex flex-col mb-4" >
    <%= f.submit "Sign Up" ,class:"bg-gray-900 font-bold text-blue-300 py-2 hover:bg-gray-700 cursor-pointer rounded-sm" %>
  </div>

<% end %>
</div>

<p>Already have an Account? <%= link_to "Login" , login_path %></p>
</div>