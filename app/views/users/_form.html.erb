<%= form_for user do |form| %>
<div data-controller="profile" class="flex flex-1 flex-col justify-center  w-90">
<div class="flex flex-col mb-4" >
    <%= form.label :name %>
    <%= form.text_field :name , class:"mt-2 rounded-md" %>
</div>
<div class="flex flex-col mb-4 ">
      <%= form.label :about  %>
    <%= form.text_field :about ,class:"mt-2 rounded-md" %>
</div>
<div class="justify-center mb-4 flex flex-col">
    <%= form.label :profileImage  %>
    <%= form.file_field :profileImage , class:"mt-2 p-1 border border-black/60 rounded-md" %>
</div>
<button type="submit" class="flex justify-center  bg-gray-900 text-gray-50 rounded-md text-lg cursor-pointer" data-action="click->profile#toggle_profile_form">
    submit
</button>
</div>
<% end %>