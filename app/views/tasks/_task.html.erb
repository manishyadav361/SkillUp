  <div class="mb-4">
    <div class="flex items-center">

    <%# task name %>

        <h1 class="text-lg font-medium mr-4"><%= task.name %></h1>

    <%#  task participation %>

    <%= form_with model: [ task, task.participants.build ] do |form| %>

         <% if !@participant %>
            <%= form.submit "participate" , class:"bg-blue-200 py-1 px-2 rounded-md drop shadow-md shadow-blue-200 cursor-pointer text-green-800 font-medium font text-sm"%>
           
            <% else %>

            <button disabled=true class="bg-green-300 py-1 px-2 rounded-md drop shadow-md shadow-green-200 cursor-pointer text-green-800 font-medium font text-sm">participated</button>
            <% end %>

        <% end %>
        <% if rating %>
        <%= rating.rating %>
        <% end %>
        <%# <%= link_to "edit" , edit_task_path(@task) %> 
    </div>

    <%# task description  %>

            <p class="font-lighter text-sm break-all mt-2"><%= task.description %></p>
    </div>

    <%# task reward  %>

    <div class="mb-4">
        <h1 class="text-lg font-medium">Reward's</h1>
        <p class="font-lighter text-sm break-all mt-2"><%= task.reward %></p>
    </div>

    <%# links and resource %>

    <div class="mb-4">
        <h1 class="text-lg font-medium">Link's and Resource's</h1>
        <div class="flex  flex-wrap py-2 ">
            <% @task.addresses.each do |address| %>
                <a href="<%= address.link %>" class="font-lighter  mr-2 text-sm break-all mt-2 underline"><%= (address.title).titleize %></a>
           
            <% end %>
        
     </div>

    
     <%#  task docs %>
    <div class="mb-4 flex flex-wrap py-2">

            <%  task.docs.each do |doc| %>

            <p class="font-lighter mr-2 text-sm break-all mt-2 underline">
                <%= link_to(doc.filename, rails_blob_path(doc, disposition: "attachment")) %>
            </p>

            <% end %>

    </div>

    <%# task submission %>

