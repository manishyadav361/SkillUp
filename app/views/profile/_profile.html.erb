<div class="w-11/12 m-auto pt-10 pt-4 lg:pt-2 ">
    
    <%= render "profile_image" , user: user %>

    <%= render "user_info" , user: user %>
     <section class="w-100 md:w-10/12 m-auto mb-8">
     <div   class="flex w-100 border-b-2 border-purple-400 mb-4 items-center">
         <h2 class="font-bold text-xl mr-4 text-gray-800" >About</h2>
     </div>
         <%= render "about" , user: user %>
    </section>


    <section class="w-100 md:w-10/12 m-auto mb-8">

        <section  class="flex w-100 border-b-2 border-purple-400 mb-4 items-center">
        <h2 class="mr-4 font-bold text-xl text-gray-800" >Skills</h2> 
        </section>
        
         <div class="flex flex-wrap items-center">
  <% if session[:user_id].to_i == user.id then %>

         <section data-controller="skill" class="w-24 rounded-full flex justify-center bg-gray-900 px-2 py-1 mr-4 text-white cursor-pointer">
         <p id="add_form" class="block" data-action="click->skill#add_skill_form">add</p>
        
         </section>
    <% end %>
         <section id="skills" class="flex flex-wrap items-center">
                    <%= render user.skills %>
         </section>
                    <section id="skill_form" class="hidden">
                    <%= render "skills/form" , user: user %>
                    </section>
         </section>  

    </section>

   
    <section class="w-100 md:w-10/12 m-auto">
       <h2 class="font-bold text-gray-800 text-xl border-b-2 border-purple-400" >Task's</h2>
       <section class="my-6">
            <% participated_in.each do |participate| %>
            <a href="/tasks/<%= participate.task.id %>"  >
                <%= render "profile/participate" , participate: participate %>
            </a>
            <% end %>
       </section>
    </section>
</div>