<%= turbo_frame_tag "#{dom_id(post)}_likes" do  %>
<% like_exist = post.likes.find {|like| like.user_id == session[:user_id].to_i }  %>
<% if post.likes.count <= 1 %>
<% likes = "like" %>
<% else %>
<% likes = "likes" %>
<% end %>
<section class="flex ">
<% if like_exist %>

    <%= link_to "#{likes}" , [post,like_exist] , data: { turbo_method: :delete }  , class:"mr-2 font-medium" %>
<% else %>
    <%= link_to "like" , post_likes_path(post), data:{ turbo_method: :post }  ,class:"mr-2 font-medium" %>
<% end %>
        <p><%= post.likes.count   %> </p>    
</section>

<% end %> 
